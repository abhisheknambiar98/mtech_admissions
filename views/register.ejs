<body>
        <section class="hero is-primary">
                <div class="hero-body">
                  <div class="container">
                    <h1 class="title">
                      Account Registration
                    </h1>
                    <h2 class="subtitle">
                      Complete the form to authenticate
                    </h2>
                  </div>
                </div>
              </section>




              <div class="container" style="margin-top:1em;">

                                  <div class="field">
                                          <div class="control" id="avg">
                                              <label class="label"> Name *</label>
                                            <input class="input is-primary" type="text" placeholder="Enter Full Name">
                                          </div>
                                        </div>
                                        <div class="field">
                                            <div class="control" id="avg">
                                                <label class="label"> Email *</label>
                                              <input class="input is-primary" type="text" placeholder="Enter email">
                                            </div>
                                          </div>
                                          <div class="field">
                                              <div class="control" id="avg">
                                                  <label class="label"> Phone Number *</label>
                                                <input class="input is-primary" type="text" placeholder="Enter phone number">
                                              </div>
                                            </div>
                                            <div class="field">
                                                <div class="control" id="avg">
                                                    <label class="label"> Password *</label>
                                                  <input class="input is-primary" type="password" placeholder="Enter password">
                                                </div>
                                              </div>
                                              <div class="field">
                                                  <div class="control" id="avg">
                                                      <label class="label">Confirm Password *</label>
                                                    <input class="input is-primary" type="password" placeholder="Enter password">
                                                  </div>
                                                </div>


                                       <label class="checkbox">
                                              <input type="checkbox">
                                                The given details are valid and may proceed to register.
                                        </label>
                                      
  <div class="field is-grouped" style="margin-top:2em;">
                                            <div class="control">
                                              <button class="button is-link">Register</button>
                                            </div>
                                            <div class="control">
                                              <button class="button is-text">Reset</button>
                                            </div>
                                          </div>


                                      </div>
                                  
</body>
